<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <Description>Localizer functionality translating text properties in Windows Forms controls.</Description>
    <AssemblyTitle>GetText.NET.WindowsForm</AssemblyTitle>
    <TargetFrameworks>net48;netcoreapp3.1</TargetFrameworks>
    <UseWindowsForms>true</UseWindowsForms>
    <LangVersion>7.3</LangVersion>
    <AssemblyName>GetText.WindowsForms</AssemblyName>
    <PackageId>GetText.NET.WindowsForms</PackageId>
    <PackageTags>gettext.net.windowsforms;gettext;internationalization;localization;i18n;l10n;translate</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\GetText\GetText.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <PropertyGroup Condition="'$(TF_BUILD)' == 'true'">
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>

</Project>
